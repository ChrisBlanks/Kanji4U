<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".KanjiDisplayFragment">

    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/left_nav_text"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kanjiNumOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".03"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kanjiDisplay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="100sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onReading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.135"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/kunReading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/englishMeaning"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/frequencyRank"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.085"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/memorizedCheckbox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:text="@string/memorize_checkbox_text"
            android:textSize="24sp" />
    </LinearLayout>

    <Button
        android:id="@+id/forwardButton"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/right_nav_text"
        android:textSize="60sp" />

</LinearLayout>